@*@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet*@
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Identity;
@using Base.Core.Entities.Identity;
@inject IViewLocalizer Localizer
@inject RoleManager<CustomIdentityRole> roleManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Base.MVC.ViewModels.DeletUserViewModel

@{
    Layout = "~/Views/Shared/_LayoutRegistration.cshtml";
    List<CustomIdentityRole> roles = new List<CustomIdentityRole>();
    roles =  roleManager.Roles.ToList<CustomIdentityRole>();
    ViewData["Roles"] = roles;
}

<div class="register-box">
    <div class="register-logo">
        <a href="../../index2.html"><b>MİYA</b>@Localizer["Sales Management"]</a>
    </div>

    <div class="register-box-body">
        <p class="login-box-msg">@Localizer["Register a new membership"]</p>
        <form asp-action="DeleteUser" asp-controller="Acc" method="post">
            <div class="form-group has-feedback">
                <input type="text" asp-for="UserName" class="form-control" placeholder="Full name" />
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="email" asp-for="Email" class="form-control" placeholder="Email" />
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                <span asp-validation-for="Email"></span>
            </div>
            <div asp-validation-summary="All" class="form-group has-feedback">

                <!--<span  class="glyphicon glyphicon-alert form-control-feedback"></span>-->
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Delete</button>
                </div><!-- /.col -->
            </div>
        </form>
    </div><!-- /.form-box -->
</div><!-- /.register-box -->
