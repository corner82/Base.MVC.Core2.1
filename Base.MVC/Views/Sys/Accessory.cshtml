@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.Localization
@using Base.Core.Entities.Identity
@inject IViewLocalizer Localizer
@*@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet*@

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section stylesPageSpecs {
    <!-- iCheck -->
    <link href="~/adm/plugins/iCheck/minimal/minimal.css" rel="stylesheet" type="text/css" />

    <!-- Date Picker -->
    <link href="~/adm/plugins/bootstrap-datepicker/dist/css/bootstrap-datepicker.css" rel="stylesheet">

    <!-- devex -->
    <link rel="stylesheet" type="text/css" href="~/adm/plugins/devextreme/css/dx.spa.css" />
    <link rel="stylesheet" type="text/css" href="~/adm/plugins/devextreme/css/dx.common.css" />
    <link rel="dx-theme" data-theme="generic.light" href="~/adm/plugins/devextreme/css/dx.light.css" />

    <!-- validationEngine -->
    <link rel="stylesheet" href="~/adm/plugins/validationEngine/validationEngine.jquery.css" type="text/css" />

    <!-- tagCabin css -->
    <link href="~/adm/plugins/zeyn/tag-cabin/tag-cabin.css" rel="stylesheet" type="text/css" />

    <link rel="stylesheet" href="~/adm/dist/css/AdminLTE.css" type="text/css" />
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Breadcrumb-->
    @Html.Partial("~/Views/Shared/AdminBreadCrumbPartial.cshtml")

    <!-- Main content -->
    <section class="content">

        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">

                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-comments-o"></i>
                        <h3 class="box-title"><span lang="en">Accessory feature name idenification form</span></h3>

                        <div class="box-tools pull-right">
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="nav-tabs-custom">
                            <ul class="nav nav-tabs pull-right">
                                <li class="active"><a href="#tab_1" data-toggle="tab" aria-expanded="true"><span lang="en">Accessory feature name identification</span></a></li>
                                <li class=""><a href="#tab_2" data-toggle="tab" aria-expanded="false" class="disable" disabled=""><span lang="en">Accessory identification</span></a></li>

                                <li class="pull-left header"><i class="fa fa-th"></i></li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab_1">
                                    <form id='FeatureNameForm' method="get">
                                        <div class="row" id="loading-image-featurename">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label><span lang="en">Feature name (Backoffice)</span></label>
                                                    <div class="input-group">
                                                        <div class="input-group-addon">
                                                            <i class="fa fa-user"></i>
                                                        </div>
                                                        <input type="text" class="form-control validate[required]" placeholder="Feature name (Backoffice)" id="txt-featurename-bo">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label><span lang="en">Feature name (Salesman)</span></label>
                                                    <div class="input-group">
                                                        <div class="input-group-addon">
                                                            <i class="fa fa-user"></i>
                                                        </div>
                                                        <input type="text" class="form-control validate[required]" placeholder="Feature name (Salesman)" id="txt-featurename-sm">
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label lang="en">
                                                        Active
                                                        <div class="icheckbox_minimal-blue checked" aria-checked="false" aria-disabled="false" style="position: relative;">
                                                            <input type="checkbox" class="minimal" checked="" style="position: absolute; opacity: 0;">
                                                            <ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;">
                                                            </ins>
                                                        </div>

                                                    </label>
                                                </div>
                                            </div>
                                            <!-- /.col -->

                                            <div class="col-md-6">
                                            </div>

                                            <!-- /.col -->
                                        </div>
                                        <div class="box-footer">
                                            <button type="reset" class="btn btn-primary btn-md pull-right" style="margin-right:10px" id="btn-featurename-clear" onclick="resetFeatureNameForm();">&nbsp;<i class="fa fa-eraser"></i>&nbsp;&nbsp;Clear&nbsp;&nbsp;</button>
                                            <button type="submit" class="btn btn-primary btn-md pull-right" style="margin-right:10px" id="btn-featurename-save" onclick="insertFeatureNameWrapper();">&nbsp;<i class="fa fa-save"></i>&nbsp;&nbsp;Save&nbsp;&nbsp;</button>
                                        </div>
                                    </form>

                                    <!-- Devex datagrid -->
                                    <div class="box box-info">
                                        <div class="box-header">
                                            <i class="fa fa-comments-o"></i>
                                            <h3 class="box-title">Accessory Feature Name List</h3>

                                            <div class="box-tools pull-right">
                                                <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                                <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                                            </div>
                                        </div>
                                        <div class="box-body" id="loading-image-featurenameGrid">
                                            <div id="gridContainer_featurename"></div>
                                        </div>
                                    </div>
                                </div>


                                <div class="tab-pane" id="tab_2">
                                    <!-- Training Info form -->
                                    <form id='accessoryForm' method="get">
                                        <div class="row" id="loading-image-accessory">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label><span lang="en">Vehicle model</span></label>

                                                    <div class="" id="ajaxACL-vehiclemodel">
                                                        <div id="loading-image-vehiclemodel" class="input-group">
                                                            <div class="input-group-addon">
                                                                <i class="fa fa-copyright"></i>
                                                            </div>
                                                            <div id="dropdownVehicleModel" class="form-control validate[required]"></div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label><span lang="en">KP no (Premarkup)</span></label>

                                                    <div class="" id="ajaxACL-kp">
                                                        <div id="loading-image-kp" class="input-group">
                                                            <div class="input-group-addon">
                                                                <i class="fa fa-copyright"></i>
                                                            </div>
                                                            <div id="dropdownKPNo" class="form-control validate[required]"></div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label><span lang="en">Supplier</span></label>

                                                    <div class="" id="ajaxACL-supplier">
                                                        <div id="loading-image-supplier" class="input-group">
                                                            <div class="input-group-addon">
                                                                <i class="fa fa-copyright"></i>
                                                            </div>
                                                            <div id="dropdownSupplier" class="form-control validate[required]"></div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label><span lang="en">Feature accessory name (Backoffice/Salesman)</span></label>

                                                    <div class="" id="ajaxACL-featureaccessoryname">
                                                        <div id="loading-image-featureaccessoryname" class="input-group">
                                                            <div class="input-group-addon">
                                                                <i class="fa fa-copyright"></i>
                                                            </div>
                                                            <div id="dropdownFeatureAccessoryName" class="form-control validate[required]"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label><span lang="en">Options</span></label>

                                                    <div class="" id="ajaxACL-options">
                                                        <div id="loading-image-options" class="input-group">
                                                            <div class="input-group-addon">
                                                                <i class="fa fa-copyright"></i>
                                                            </div>
                                                            <div id="dropdownOptions" class="form-control validate[required]"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label lang="en">
                                                        Active
                                                        <div class="icheckbox_minimal-blue checked" aria-checked="false" aria-disabled="false" style="position: relative;">
                                                            <input type="checkbox" class="minimal" checked="" style="position: absolute; opacity: 0;">
                                                            <ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;">
                                                            </ins>
                                                        </div>

                                                    </label>
                                                </div>
                                            </div>
                                            <!-- /.col -->
                                            <div class="col-md-6">

                                                <div class="form-group">
                                                    <label><span lang="en">Cost-local / onsite</span></label>
                                                    <div class="input-group">
                                                        <div class="input-group-addon">
                                                            <i class="fa fa-user"></i>
                                                        </div>
                                                        <input type="text" class="form-control validate[required]" placeholder="Cost-national / onsite" id="txt-cost-local">
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label><span lang="en">Cost-national / offsite</span></label>
                                                    <div class="input-group">
                                                        <div class="input-group-addon">
                                                            <i class="fa fa-user"></i>
                                                        </div>
                                                        <input type="text" class="form-control validate[required]" placeholder="Cost-national / offsite" id="txt-cost-national">
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label><span lang="en">Part number - local</span></label>
                                                    <div class="input-group">
                                                        <div class="input-group-addon">
                                                            <i class="fa fa-user"></i>
                                                        </div>
                                                        <input type="text" class="form-control validate[required]" placeholder="Part number - local" id="txt-partnumber-local">
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label><span lang="en">Part number - international</span></label>
                                                    <div class="input-group">
                                                        <div class="input-group-addon">
                                                            <i class="fa fa-user"></i>
                                                        </div>
                                                        <input type="text" class="form-control validate[required]" placeholder="Part number - international" id="txt-partnumber-international">
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label><span lang="en">List Price</span></label>
                                                    <div class="input-group">
                                                        <div class="input-group-addon">
                                                            <i class="fa fa-user"></i>
                                                        </div>
                                                        <input type="text" class="form-control validate[required]" placeholder="List price" id="txt-accessory-name">
                                                    </div>
                                                </div>

                                            </div>

                                            <!-- /.col -->
                                        </div>
                                        <div class="box-footer">
                                            <button type="reset" class="btn btn-primary btn-md pull-right" style="margin-right:10px" id="btn-accessory-clear" onclick="resetAccessoryForm();">&nbsp;<i class="fa fa-eraser"></i>&nbsp;&nbsp;Clear&nbsp;&nbsp;</button>
                                            <button type="submit" class="btn btn-primary btn-md pull-right" style="margin-right:10px" id="btn-accessory-save" onclick="insertAccessoryWrapper();">&nbsp;<i class="fa fa-save"></i>&nbsp;&nbsp;Save&nbsp;&nbsp;</button>
                                        </div>
                                    </form>
                                    <!-- Devex datagrid -->
                                    <div class="box box-info">
                                        <div class="box-header">
                                            <i class="fa fa-comments-o"></i>
                                            <h3 class="box-title"><span lang="en">Accessory list</span></h3>

                                            <div class="box-tools pull-right">
                                                <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                                <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                                            </div>
                                        </div>
                                        <div class="box-body" id="loading-image-accessoryGrid">
                                            <div id="gridContainer_accessory"></div>
                                        </div>
                                    </div>
                                </div>
                            </div><!-- /.tab-content -->
                        </div>

                    </div>
                </div>

            </section><!-- /.Left col -->

        </div><!-- /.row (main row) -->
        <!-- Main row -->

    </section><!-- /.content -->

</div><!-- /.content-wrapper -->


