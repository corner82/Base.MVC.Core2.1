<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Breadcrumb-->
    @Html.Partial("~/Views/Shared/AdminBreadCrumbPartial.cshtml")

    <!-- Main content -->
    <section class="content">

        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">

                <div class="box box-info" id="ajaxACL-supplier">
                    <div class="box-header">
                        <i class="fa fa-comments-o"></i>
                        <h3 class="box-title"><span lang="en">Supplier Information Form</span></h3>

                        <div class="box-tools pull-right">
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        </div>
                    </div>
                    <div class="box-body">
                        <form id='supplierForm' method="get">
                            <div class="row" id="loading-image-supplier">
                                <div class="col-md-6">

                                    <div class="form-group">
                                        <label><span lang="en">Supplier name</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-user"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Supplier name" id="txt-supplier-name">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Supplier short name</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-user"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Supplier short name" id="txt-supplier-sname">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Embrace supplier number</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-user"></i>
                                            </div>
                                            <input type="text" class="form-control" placeholder="Embrace supplier number" id="txt-embrace-no">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Country</span></label>

                                        <div class="" id="ajaxACL-country">
                                            <div id="loading-image-country" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-map"></i>
                                                </div>
                                                <div id="dropdownCountry" class="form-control"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Province</span></label>

                                        <div class="" id="ajaxACL-province">
                                            <div id="loading-image-province" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-map"></i>
                                                </div>
                                                <div id="dropdownProvince" class="form-control"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">City</span></label>

                                        <div class="" id="ajaxACL-city">
                                            <div id="loading-image-city" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-map"></i>
                                                </div>
                                                <div id="dropdownCity" class="form-control"></div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <!-- /.col -->

                                <div class="col-md-6">

                                    <div class="form-group">
                                        <label><span lang="en">Address 1</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map"></i>
                                            </div>
                                            <input type="text" class="form-control" placeholder="Supplier address 1" id="txt-supplier-address1">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Address 2</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map"></i>
                                            </div>
                                            <input type="text" class="form-control" placeholder="Supplier address 2" id="txt-supplier-address2">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Address 3</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map"></i>
                                            </div>
                                            <input type="text" class="form-control" placeholder="Supplier address 3" id="txt-supplier-address3">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Postal code</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control" placeholder="Supplier Postal Code" id="txt-location-ptcode">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Telephone</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control" placeholder="Supplier Telephone" id="txt-supplier-telephone">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Fax</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control" placeholder="Supplier fax" id="txt-supplier-fax">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">E-mail</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control" placeholder="Supplier e-mail" id="txt-supplier-email">
                                        </div>
                                    </div>
                                </div>

                                <!-- /.col -->
                            </div>
                            <div class="box-footer clearfix no-border">
                                <div class="box-footer clearfix no-border">
                                    <div class="box-footer">
                                        <button type="reset" class="btn btn-primary btn-md pull-right" style="margin-right:10px" id="btn-supplier-clear" onclick="resetSupplierForm();">&nbsp;<i class="fa fa-eraser"></i>&nbsp;&nbsp;Clear&nbsp;&nbsp;</button>
                                        <button type="submit" class="btn btn-primary btn-md pull-right" style="margin-right:10px" id="btn-supplier-save">&nbsp;<i class="fa fa-save"></i>&nbsp;&nbsp;Save&nbsp;&nbsp;</button>
                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>

            </section><!-- /.Left col -->

        </div><!-- /.row (main row) -->
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">

                <div class="box box-info" id="ajaxACL-supplierlist">
                    <div class="box-header">
                        <i class="fa fa-comments-o"></i>
                        <h3 class="box-title"><span lang="en">Supplier List</span></h3>

                        <div class="box-tools pull-right">
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="refresh" id="supplierList"><i class="fa fa-refresh"></i></button>
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        </div>
                    </div>
                    <div class="box-body" id="loading-image-supplierGrid">
                        <div id="gridContainer_supplier"></div>
                    </div>

                </div>

            </section><!-- /.Left col -->

        </div><!-- /.row (main row) -->

    </section><!-- /.content -->

</div><!-- /.content-wrapper -->

