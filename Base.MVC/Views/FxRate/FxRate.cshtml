                                        @* <button class="btn bg-teal btn-sm" data-widget="collapse"><i class="fa fa-minus"></i></button>*@
                                        @* <button class="btn bg-teal btn-sm" data-widget="remove"><i class="fa fa-times"></i></button>*@
                                    </div>
                                </div>
                                <div class="box-body">

                                    <div class="form-group">
                                        <label>Start Date:</label>
                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input type="text" class="form-control pull-right" id="start-datepicker">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label>End Date:</label>
                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input type="text" class="form-control pull-right" id="end-datepicker">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label>Rate:</label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-money"></i>
                                            </div>
                                            <input type="number" class="form-control" placeholder="Rate" id="rate">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <button class="btn btn-primary btn-group-lg btn-flat" id="Fxrate_Save">SAVE</button>
                                        <button class="btn btn-primary btn-group-lg btn-success" id="Fxrate_Update">UPDATE</button>
                                        <button class="btn btn-primary btn-group-lg btn-warning" id="Fxrate_Clear">CLEAR FORM</button>
                                    </div>

                                </div>
                            </div>
                            <!-- FxRate son-->
                        </div>
                    </div>
                </div>
            </section><!-- /.Left col -->
        </div><!-- /.row (main row) -->


