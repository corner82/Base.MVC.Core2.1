<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header-breadcrumb-miya">
        <div class="row text-right">
            <div class="col-md-12">

                <ol class="breadcrumb breadcrumb-miya">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li><a href="#">UI</a></li>
                    <li class="active">General</li>
                </ol>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">

                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-comments-o"></i>
                        <h3 class="box-title">Training Info</h3>

                        <div class="box-tools pull-right">
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="nav-tabs-custom">
                            <ul class="nav nav-tabs pull-right">
                                <li class="active"><a href="#tab_1" data-toggle="tab" aria-expanded="true">Training Identification</a></li>
                                <li class=""><a href="#tab_2" data-toggle="tab" aria-expanded="false" class="disable" disabled="">Training information</a></li>

                                <li class="pull-left header"><i class="fa fa-th"></i></li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab_1">
                                    <form id='customerInfoForm' method="get">
                                        <div class="row" id="loading-image-cstInfo">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Traning name:</label>
                                                    <div class="input-group">
                                                        <div class="input-group-addon">
                                                            <i class="fa fa-book"></i>
                                                        </div>
                                                        <input type="text" class="form-control validate[required]" placeholder="Training Name" id="txt-cst-name">
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- /.col -->
                                            <div class="col-md-6">
                                            </div>

                                            <!-- /.col -->
                                        </div>
                                        <div class="box-footer clearfix no-border">
                                            <table class="table text-center">
                                                <tbody>
                                                    <tr>
                                                        <td width="75%">
                                                            &nbsp;
                                                        </td>
                                                        <td>
                                                            <button type="reset" class="btn btn-block btn-primary btn-lg" id="btn-cst-clear" onclick="resetCustomerInfoForm();">&nbsp;<i class="fa fa-eraser"></i>&nbsp;&nbsp;Clear&nbsp;&nbsp;</button>
                                                        </td>
                                                        <td>
                                                            <button type="submit" class="btn btn-block btn-primary btn-lg" id="btn-cst-save" onclick="insertCustomerInfoWrapper();">&nbsp;<i class="fa fa-save"></i>&nbsp;&nbsp;Save&nbsp;&nbsp;</button>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </form>
                                </div>

                                <!-- /.tab-pane -->

                                <div class="tab-pane" id="tab_2">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Training Name:</label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-copyright"></i>
                                                    </div>
                                                    <input type="text" class="form-control validate[required]" placeholder="Training Name" id="txt-Training-name">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Trainer:</label>
                                                <div class="" id="ajaxACL-trainer">
                                                    <div id="loading-image-trainer" class="input-group">
                                                        <div class="input-group-addon">
                                                            <i class="fa fa-truck"></i>
                                                        </div>
                                                        <div id="dropdownTrainer" class="form-control validate[required]"></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Training City:</label>
                                                <div class="" id="ajaxACL-City">
                                                    <div id="loading-image-City" class="input-group">
                                                        <div class="input-group-addon">
                                                            <i class="fa fa-truck"></i>
                                                        </div>
                                                        <div id="dropdownCity" class="form-control"></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Training Address:</label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-copyright"></i>
                                                    </div>
                                                    <input type="text" class="form-control" placeholder="Address" id="txt-TrAdr-name">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Postal Code:</label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-copyright"></i>
                                                    </div>
                                                    <input type="text" class="form-control" placeholder="Postal Code" id="txt-PtCode-name">
                                                </div>
                                            </div>
                                        </div>

                                        <!-- /.col -->
                                        <div class="col-md-6">

                                            <div class="form-group">
                                                <label>Explanation:</label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-copyright"></i>
                                                    </div>
                                                    <input type="text" class="form-control" placeholder="Explanation" id="txt-Explanation-name">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Training Start Date:</label>

                                                <div class="input-group date">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-calendar"></i>
                                                    </div>
                                                    <input type="text" class="form-control pull-right" name="Start-datepicker" id="start-datepicker">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Training End Date:</label>

                                                <div class="input-group date">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-calendar"></i>
                                                    </div>
                                                    <input type="text" class="form-control pull-right" name="End-datepicker" id="end-datepicker">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Grade:</label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-copyright"></i>
                                                    </div>
                                                    <input type="text" class="form-control" placeholder="Grade" id="txt-Grade-name">
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /.col -->
                                    </div>
                                </div><!-- /.tab-pane -->

                            </div><!-- /.tab-content -->
                        </div>

                    </div>
                </div>

            </section><!-- /.Left col -->

        </div><!-- /.row (main row) -->


    </section><!-- /.content -->
    <!-- Main content -->
    <section class="content">

        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">

                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-comments-o"></i>
                        <h3 class="box-title">Training Info</h3>

                        <div class="box-tools pull-right">
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        </div>
                    </div>
                    <div class="box-body" id="loading-image-cstInfoGrid">
                        <div id="gridContainer_customer"></div>
                    </div>
                </div>

            </section><!-- /.Left col -->

        </div><!-- /.row (main row) -->


    </section><!-- /.content -->
</div><!-- /.content-wrapper -->

