@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.Localization
@using Base.Core.Entities.Identity
@inject IViewLocalizer Localizer
@*@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet*@

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section stylesPageSpecs {
    <!-- iCheck -->
    <link href="~/adm/plugins/iCheck/minimal/minimal.css" rel="stylesheet" type="text/css" />

    <!-- Date Picker -->
    <link href="~/adm/plugins/bootstrap-datepicker/dist/css/bootstrap-datepicker.css" rel="stylesheet">

    <!-- devex -->
    <link rel="stylesheet" type="text/css" href="~/adm/plugins/devextreme/css/dx.spa.css" />
    <link rel="stylesheet" type="text/css" href="~/adm/plugins/devextreme/css/dx.common.css" />
    <link rel="dx-theme" data-theme="generic.light" href="~/adm/plugins/devextreme/css/dx.light.css" />

    <!-- validationEngine -->
    <link rel="stylesheet" href="~/adm/plugins/validationEngine/validationEngine.jquery.css" type="text/css" />

    <!-- tagCabin css -->
    <link href="~/adm/plugins/zeyn/tag-cabin/tag-cabin.css" rel="stylesheet" type="text/css" />

    <link rel="stylesheet" href="~/adm/dist/css/AdminLTE.css" type="text/css" />
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Breadcrumb-->
    @Html.Partial("~/Views/Shared/AdminBreadCrumbPartial.cshtml")

    <!-- Main content -->
    <section class="content">

        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">

                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-comments-o"></i>
                        <h3 class="box-title"><span lang="en">Demo/Courtesy vehicle return form</span></h3>

                        <div class="box-tools pull-right">
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        </div>
                    </div>
                    <div class="box-body">
                        <form id='demoCourtesyReturnForm' method="get">
                            <div class="row" id="loadingImage_demoCourtesyReturn">

                                <div class="col-md-6" id="ajaxACL-demoCourtesyReturn">
                                    <div class="form-group">
                                        <label><span lang="en">Demo/Courtesy vehicle list</span></label>
                                        <div class="" id="ajax_DdslickDemoVehicle">
                                            <div id="loadingImage_DdslickDemoVehicle" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-copyright"></i>
                                                </div>
                                                <div id="ddslickDemoVehicle" class="form-control"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="form-group">
                                            <label>
                                                Customer Informed?
                                                <div class="icheckbox_minimal-blue " aria-checked="false" aria-disabled="true" style="position: relative;">
                                                    <input type="checkbox" class="minimal" checked="" style="position: absolute; opacity: 0;">
                                                    <ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;">
                                                    </ins>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Vehicle return</span></label>
                                        <div class="" id="ajax_DdslickReturn">
                                            <div id="loadingImage_DdslickReturn" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-copyright"></i>
                                                </div>
                                                <div id="ddslickReturn" class="form-control"></div>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label><span lang="en">Customer name</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Customer Name" id="txt-demoCourReturn-cusName" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Customer address</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Customer Address" id="txt-demoCourReturn-cusAddr" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Delivery address</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Customer Address" id="txt-demoCourReturn-deliveryAddr" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Demo start date</span></label>
                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input type="text" class="form-control pull-right validate[required]" name="Start-datepicker" id="start-datepicker" placeholder="Start Date" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Demo end date</span></label>
                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input type="text" class="form-control pull-right validate[required]" name="End-datepicker" id="end-datepicker" placeholder="End Date" disabled>
                                        </div>
                                    </div>

                                </div>
                                <!-- /.col -->

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label><span lang="en">Vehicle return location</span></label>
                                        <div class="" id="ajax_DdslickReturnLoc">
                                            <div id="loadingImage_DdslickReturnLoc" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-copyright"></i>
                                                </div>
                                                <div id="ddslickReturnLoc" class="form-control"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Motivation</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Motivation" id="txt-demoCourReturn-motivation" >
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Customer priority level</span></label>
                                        <div class="" id="ajax_DdslickCusPri">
                                            <div id="loadingImage_DdslickCusPri" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-copyright"></i>
                                                </div>
                                                <div id="ddslickCusPri" class="form-control"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Potential deal size after demo</span></label>
                                        <div class="" id="ajax_DdslickPotSize">
                                            <div id="loadingImage_DdslickPotSize" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-copyright"></i>
                                                </div>
                                                <div id="ddslickPotSize" class="form-control"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Reason for extension</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Reason for extension" id="txt-demoCourReturn-reasonExt" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Extension start date</span></label>
                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input type="text" class="form-control pull-right validate[required]" name="Start-datepicker" id="exStart-datepicker" placeholder="Start Date" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Extension end date</span></label>
                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input type="text" class="form-control pull-right validate[required]" name="End-datepicker" id="exEnd-datepicker" placeholder="End Date" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Assesment form upload</label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-mail-forward"></i>
                                            </div>
                                            <input type="file" class="form-control validate[required]" id="file" name="file" />
                                        </div>
                                    </div>

                                    </div>

                                </div><!-- /.col -->

                            </div>
                            <div class="box-footer">
                                <button type="reset" class="btn btn-primary btn-md pull-right" style="margin-right:10px" id="btn-demoCourReturn-clear">&nbsp;<i class="fa fa-eraser"></i>&nbsp;&nbsp;Clear&nbsp;&nbsp;</button>
                                <button type="submit" class="btn btn-primary btn-md pull-right" style="margin-right:10px" id="btn-demoCourReturn-save">&nbsp;<i class="fa fa-save"></i>&nbsp;&nbsp;Save&nbsp;&nbsp;</button>
                            </div>
                        </form>

                        <div class="box box-info">
                            <div class="box-header" id="ajaxACL-demoCourReturn">
                                <i class="fa fa-comments-o"></i>
                                <h3 class="box-title"><span lang="en">Demo/Courtesy vehicle list</span></h3>

                                <div class="box-tools pull-right">
                                    <button class="btn bg-teal btn-sm btn-small-miya" data-widget="refresh" id="demoCourReturnRefresh"><i class="fa fa-refresh"></i></button>
                                    <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                    <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                                </div>
                            </div>

                            <div class="box-body" id="loadingImage_DdslickDemoCourReturnGrid">
                                <div id="gridContainer_DemoCourReturn"></div>
                            </div>
                        </div>
                    </div>
                </div>

            </section><!-- /.Left col -->

        </div><!-- /.row (main row) -->


    </section><!-- /.content -->
    <!-- Main content -->
</div><!-- /.content-wrapper -->

