    <script src="~/adm/plugins/slimScroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <!-- FastClick -->
    <!-- iCheck 1.0.1 -->
    <script src="~/adm/plugins/iCheck/icheck.min.js" type="text/javascript"></script>
