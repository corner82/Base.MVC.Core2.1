<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Breadcrumb-->
    @Html.Partial("~/Views/Shared/AdminBreadCrumbPartial.cshtml")

    <!-- Main content -->
    <section class="content">

        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">

                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-comments-o"></i>
                        <h3 class="box-title">Customer Activity Form</h3>

                        <div class="box-tools pull-right">
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        </div>
                    </div>
                    <div class="box-body">
                        <form id='activitForm' method="get">
                            <div class="row" id="loading-image-activity">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label><span lang="en">Customer name</span></label>
                                        <div class="" id="ajaxACL-customername">
                                            <div id="loading-image-customername" class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-copyright"></i>
                                                </div>
                                                <div id="dropdownCustomerName" class="form-control"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Customer contact person</span></label>
                                        <div class="" id="ajaxACL-contactperson">
                                            <div id="loading-image-contactperson" class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-copyright"></i>
                                                </div>
                                                <div id="dropdownContactPerson" class="form-control"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Activity type</span></label>
                                        <div class="" id="ajaxACL-activitytype">
                                            <div id="loading-image-activitytype" class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-copyright"></i>
                                                </div>
                                                <div id="dropdownActivityType" class="form-control"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Activity comment</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-user"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Activity comment" id="txt-activity-comment">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Activity status</span></label>
                                        <div class="" id="ajaxACL-activitystatus">
                                            <div id="loading-image-activitystatus" class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-copyright"></i>
                                                </div>
                                                <div id="dropdownActivityStatus" class="form-control"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Planed/Unplaned Activity</span></label>
                                        <div class="" id="ajaxACL-activityplaned">
                                            <div id="loading-image-activityplaned" class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-copyright"></i>
                                                </div>
                                                <div id="dropdownActivityPlaned" class="form-control"></div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <!-- /.col -->

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label><span lang="en">Activity date/time</span></label>

                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input type="text" class="form-control pull-right" name="activity-datepicker" id="activity-datepicker">
                                        </div>
                                        <!-- /.input group -->
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Application grup / Segment</span></label>
                                        <div class="" id="ajaxACL-applicationgrup">
                                            <div id="loading-image-applicationgrup" class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-copyright"></i>
                                                </div>
                                                <div id="dropdownApplicationgrup" class="form-control"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Type of vehicle concerned</span></label>
                                        <div class="" id="ajaxACL-concernedvehicletype">
                                            <div id="loading-image-concernedvehicletype" class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-copyright"></i>
                                                </div>
                                                <div id="dropdownConcernedVehicleType" class="form-control"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Note to the manager</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-user"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Note to the Manager" id="txt-note-manager">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Activity tracking date/time</span></label>

                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input type="text" class="form-control pull-right" name="activity-tracking-datepicker" id="activity-tracking-datepicker">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Activity tracking type</span></label>
                                        <div class="" id="ajaxACL-activitytrackingtype">
                                            <div id="loading-image-activitytrackingtype" class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-copyright"></i>
                                                </div>
                                                <div id="dropdownActivitytrackingtype" class="form-control"></div>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                                <!-- /.col -->
                            </div>
                            <div class="box-footer clearfix no-border">
                                <table class="table text-center">
                                    <tbody>
                                        <tr>
                                            <td width="75%">
                                                &nbsp;
                                            </td>
                                            <td>
                                                <button type="reset" class="btn btn-block btn-primary btn-md" id="btn-brand-clear" onclick="resetActivityForm();">&nbsp;<i class="fa fa-eraser"></i>&nbsp;&nbsp;Clear&nbsp;&nbsp;</button>
                                            </td>
                                            <td>
                                                <button type="submit" class="btn btn-block btn-primary btn-md" id="btn-brand-save" onclick="insertActivityWrapper();">&nbsp;<i class="fa fa-save"></i>&nbsp;&nbsp;Save&nbsp;&nbsp;</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </form>

                    </div>
                </div>

            </section><!-- /.Left col -->

        </div><!-- /.row (main row) -->
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">

                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-comments-o"></i>
                        <h3 class="box-title">Customer Activity List</h3>

                        <div class="box-tools pull-right">
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        </div>
                    </div>
                    <div class="box-body" id="loading-image-activityGrid">
                        <div id="gridContainer_activity"></div>
                    </div>
                </div>

            </section><!-- /.Left col -->

        </div><!-- /.row (main row) -->

    </section><!-- /.content -->

</div><!-- /.content-wrapper -->

