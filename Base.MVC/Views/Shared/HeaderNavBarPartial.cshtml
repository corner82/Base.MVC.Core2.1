                        <li class="user-footer">
                            <div class="pull-left">
                                <a href="#" class="btn btn-default btn-flat">@Localizer["Profile"]</a>
                            </div>
                            <div class="pull-right">
                                <a href="#" class="btn btn-default btn-flat">@Localizer["Logout"]</a>
                            </div>
                        </li>
                    </ul>
