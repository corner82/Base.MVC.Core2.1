@using Microsoft.AspNetCore.Mvc.Localization
@using Base.Core.Entities.Identity
@inject IViewLocalizer Localizer
@*@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet*@

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section stylesPageSpecs {
    <!-- iCheck -->
    <link href="~/adm/plugins/iCheck/minimal/minimal.css" rel="stylesheet" type="text/css" />

    <!-- Date Picker -->
    <link href="~/adm/plugins/bootstrap-datepicker/dist/css/bootstrap-datepicker.css" rel="stylesheet">

    <!-- devex -->
    <link rel="stylesheet" type="text/css" href="~/adm/plugins/devextreme/css/dx.spa.css" />
    <link rel="stylesheet" type="text/css" href="~/adm/plugins/devextreme/css/dx.common.css" />
    <link rel="dx-theme" data-theme="generic.light" href="~/adm/plugins/devextreme/css/dx.light.css" />

    <!-- validationEngine -->
    <link rel="stylesheet" href="~/adm/plugins/validationEngine/validationEngine.jquery.css" type="text/css" />

    <!-- tagCabin css -->
    <link href="~/adm/plugins/zeyn/tag-cabin/tag-cabin.css" rel="stylesheet" type="text/css" />

    <link rel="stylesheet" href="~/adm/dist/css/AdminLTE.css" type="text/css" />
    <!--<link rel="stylesheet" href="~/miya/dist/css/miya.css" type="text/css" />-->
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Breadcrumb-->
    @Html.Partial("~/Views/Shared/AdminBreadCrumbPartial.cshtml")

    <!-- Main content -->
    <section class="content">

        <!-- Main row -->
        <div class="row">

            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">

                <div class="box box-info" id="ajaxACL-vehicle">
                    <div class="box-header">
                        <i class="fa fa-comments-o"></i>
                        <h3 class="box-title"><span lang="en">Vehicle information form</span></h3>

                        <div class="box-tools pull-right">
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        </div>
                    </div>
                    <div class="box-body" id="ajax_FormVehicle">
                        <form id='vehicleForm' method="get">
                            <div class="row" id="loadingImage_FormVehicle">
                                <div class="col-md-6">

                                    <div class="form-group">
                                        <label><span lang="en">Vehicle kit type </span></label>

                                        <div class="" id="ajax_DdslickVehicleKitType">
                                            <div id="loadingImage_DdslickVehicleKitType" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-truck"></i>
                                                </div>
                                                <div id="ddslickVehicleKitType" class="form-control validate[required]"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Vehicle model</span></label>

                                        <div class="" id="ajax_DdslickVehicleModel">
                                            <div id="loadingImage_DdslickVehicleModel" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-truck"></i>
                                                </div>
                                                <div id="ddslickVehicleModel" class="form-control validate[required]"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Vehicle model type</span></label>

                                        <div class="" id="ajax_DdslickVehicleModelGr">
                                            <div id="loadingImage_DdslickVehicleModelGr" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-truck"></i>
                                                </div>
                                                <div id="ddslickVehicleModelGr" class="form-control validate[required]"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Vehicle model type tonaj</span></label>

                                        <div class="" id="ajax_DdslickVehicleModelGrTonaj">
                                            <div id="loadingImage_DdslickVehicleModelGrTonaj" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-truck"></i>
                                                </div>
                                                <div id="ddslickVehicleModelGrTonaj" class="form-control validate[required]"></div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label><span lang="en">Horsepower</span></label>

                                        <div class="" id="ajax_DdslickHorsepower">
                                            <div id="loadingImage_DdslickHorsepower" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-truck"></i>
                                                </div>
                                                <div id="ddslickHorsepower" class="form-control validate[required]"></div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label><span lang="en">Config</span></label>

                                        <div class="" id="ajax_DdslickConfig">
                                            <div id="loadingImage_DdslickConfig" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-truck"></i>
                                                </div>
                                                <div id="ddslickConfig" class="form-control validate[required]"></div>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label><span lang="en">Vehicle variant</span></label>

                                        <div class="" id="ajax_DdslickVehicleVariant">
                                            <div id="loadingImage_DdslickVehicleVariant" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-truck"></i>
                                                </div>
                                                <div id="ddslickVehicleVariant" class="form-control validate[required]"></div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <!-- /.col -->

                                <div class="col-md-6">


                                    <div class="form-group">
                                        <label><span lang="en">Cab</span></label>

                                        <div class="" id="ajax_DdslickCab">
                                            <div id="loadingImage_DdslickCab" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-truck"></i>
                                                </div>
                                                <div id="ddslickCab" class="form-control validate[required]"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">GFZ</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-truck"></i>
                                            </div>
                                            <input type="text" class="form-control" id="txt-gfz-vehicletype" disabled><input type="text" class="form-control validate[required]" placeholder="GFZ" id="txt-gfz" onChange="gfzOnChange()">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">KP no (Premarkup)</span></label>

                                        <div class="" id="ajax_DdslickKPNo">
                                            <div id="loadingImage_DdslickKP" class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-truck"></i>
                                                </div>
                                                <div id="ddslickKPNo" class="form-control validate[required]"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group" id="st-info">
                                        <label><span lang="en">BTO/BTS</span></label>

                                        <div class="" id="ajax_DdslickBTOBTS">
                                            <div id="loadingImage_DdslickBTOBTS" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-truck"></i>
                                                </div>
                                                <div id="ddslickBTOBTS" class="form-control validate[required]"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Model description</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-truck"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Model Description" id="txt-modeldescription" onChange="modelDescOnChange()">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Application type</span></label>

                                        <div class="" id="ajax_DdslickApplicationType">
                                            <div id="loadingImage_DdslickApplicationType" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-truck"></i>
                                                </div>
                                                <div id="ddslickApplicationType" class="form-control validate[required]"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><span lang="en">Vehicle name</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-truck"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Vehicle Model + Model Description" id="txt-vehicle-name" disabled>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>

                            <div class="box-footer">
                                <button type="reset" class="btn btn-primary btn-md pull-right" style="margin-right:10px" id="btn-vehicle-clear" onclick="resetVehicleForm();">&nbsp;<i class="fa fa-eraser"></i>&nbsp;&nbsp;Clear&nbsp;&nbsp;</button>
                                <button type="submit" class="btn btn-primary btn-md pull-right" style="margin-right:10px" id="btn-vehicle-save">&nbsp;<i class="fa fa-save"></i>&nbsp;&nbsp;Save&nbsp;&nbsp;</button>
                            </div>

                        </form>

                    </div>
                </div>

            </section><!-- /.Left col -->


        </div><!-- /.row (main row) -->
        <!-- Main row -->
        <div class="row row-min-height">
            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">

                <div class="box box-info" id="ajaxACL-vehicleBTDesclist">
                    <div class="box-header">
                        <i class="fa fa-comments-o"></i>
                        <h3 class="box-title"><span lang="en">Buyback & Tradeback descriptions</span></h3>

                        <div class="box-tools pull-right">
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="refresh" id="vehicleBTDescList"><i class="fa fa-refresh"></i></button>
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        </div>
                    </div>

                    <div class="box-body" id="loading-image-vehicleBTDescGrid">
                        <div id="gridContainer_vehicleBTDesc"></div>
                    </div>
                </div>

            </section><!-- /.Left col -->

        </div><!-- /.row (main row) -->
        <!-- Main row -->
        <div class="row row-min-height">
            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">

                <div class="box box-info" id="ajaxACL-vehiclelist">
                    <div class="box-header">
                        <i class="fa fa-comments-o"></i>
                        <h3 class="box-title"><span lang="en">Vehicle list</span></h3>

                        <div class="box-tools pull-right">
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="refresh" id="vehicleList"><i class="fa fa-refresh"></i></button>
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        </div>
                    </div>
                    <div class="box-body" id="loading-image-vehicleGrid">
                        <div id="gridContainer_vehicle"></div>
                    </div>
                </div>

            </section><!-- /.Left col -->

        </div><!-- /.row (main row) -->

    </section><!-- /.content -->


</div><!-- /.content-wrapper -->

