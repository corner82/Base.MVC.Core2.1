    <link rel="stylesheet" href="~/adm/dist/css/AdminLTE.css" type="text/css" />
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Breadcrumb-->
    @Html.Partial("~/Views/Shared/AdminBreadCrumbPartial.cshtml")

    <!-- Main content -->
    <section class="content">

        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">

                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-comments-o"></i>
                        <h3 class="box-title"><span lang="en">Invoice/Proforma Back Office form</span></h3>

                        <div class="box-tools pull-right">
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        </div>
                    </div>
                    <div class="box-body">
                        <form id='invoiceProformaBoForm' method="get">
                            <div class="row" id="loadingImage_invoiceProformaBo">
                                <div class="col-md-12">
                                    <div class="box box-info" id="ajaxACL-invoiceProformaBoList">
                                        <div class="box-header">
                                            <i class="fa fa-comments-o"></i>
                                            @*<h3 class="box-title"><span lang="en">invoice/Proforma back office list</span></h3>*@

                                            <div class="box-tools pull-right">
                                                <button class="btn bg-teal btn-sm btn-small-miya" data-widget="refresh" id="invoiceProformaBoListRefresh"><i class="fa fa-refresh"></i></button>
                                                <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                                <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                                            </div>
                                        </div>

                                        <div class="box-body" id="loadingImage_InvoiceProformaBoList">
                                            <div id="gridContainer_InvoiceProformaBoList"></div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.col -->
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label><span lang="en">Customer name</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Customer name" id="txt-invoiceProformaBo-cusName" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Type</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Type" id="txt-invoiceProformaBo-type" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Customer category</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Type" id="txt-invoiceProformaBo-cusCat" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">OTP numbers</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="OTP numbers" id="txt-invoiceProformaBo-OtpNo" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Chassis</span></label>
                                        <div class="" id="ajax_DdslickChassis">
                                            <div id="loadingImage_DdslickChassis" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-copyright"></i>
                                                </div>
                                                <div id="ddslickChassis" class="form-control"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.col -->
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label><span lang="en">Order management Embrace numbers</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Order management Embrace numbers" id="txt-invoiceProformaBo-OrderManNo" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Topused Embrace numbers</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Topused Embrace numbers" id="txt-invoiceProformaBo-TopusedNo" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Centurion Embrace numbers</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Centurion Embrace numbers" id="txt-invoiceProformaBo-CenturionNo" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Other Embrace numbers</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Other Embrace numbers" id="txt-invoiceProformaBo-OtherNo" disabled>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.col -->
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label><span lang="en">Invoice/Proforma amount total</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Invoice/Proforma amount total" id="txt-invoiceProformaBo-total" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Currency</span></label>
                                        <div class="" id="ajax_DdslickCurrency">
                                            <div id="loadingImage_DdslickCurrency" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-copyright"></i>
                                                </div>
                                                <div id="ddslickCurrency" class="form-control"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Price</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control validate[required]" placeholder="Price" id="txt-invoiceProformaBo-price" disabled>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.col -->
                                
                                <div class="col-md-12">
                                    <div class="box box-info" id="ajaxACL-chassisList">
                                        <div class="box-header">
                                            <i class="fa fa-comments-o"></i>
                                            <h3 class="box-title"><span lang="en">invoice/Proforma back office chassis list</span></h3>

                                            <div class="box-tools pull-right">
                                                <button class="btn bg-teal btn-sm btn-small-miya" data-widget="refresh" id="chassisListRefresh"><i class="fa fa-refresh"></i></button>
                                                <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                                <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                                            </div>
                                        </div>

                                        <div class="box-body" id="loadingImage_chassisList">
                                            <div id="gridContainer_chassisList"></div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.col -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label><span lang="en">Sales VAT code</span></label>
                                        <div class="" id="ajax_DdslickVat">
                                            <div id="loadingImage_DdslickVat" class="input-group zeyn-load-imager">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-copyright"></i>
                                                </div>
                                                <div id="ddslickVat" class="form-control"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.col -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label><span lang="en">Deposit amount</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="text" class="form-control" placeholder="Deposit amount" id="txt-invoiceProformaBo-deposit" onChange="depositOnChange()">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><span lang="en">Deposit Attachment</span></label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-map-pin"></i>
                                            </div>
                                            <input type="file" class="form-control" placeholder="file upload" id="txt-invoiceProformaBo-file" lang="en" disabled>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.col -->

                            </div>

                            <div class="box-footer">
                                <button type="reset" class="btn btn-primary btn-md pull-right" style="margin-right:10px" id="btn-invoiceProformaBo-clear">&nbsp;<i class="fa fa-eraser"></i>&nbsp;&nbsp;Clear&nbsp;&nbsp;</button>
                                <button type="submit" class="btn btn-primary btn-md pull-right" style="margin-right:10px" id="btn-invoiceProformaBo-approval">&nbsp;<i class="fa fa-save"></i>&nbsp;&nbsp;Approval&nbsp;&nbsp;</button>
                                <button type="submit" class="btn btn-primary btn-md pull-right" style="margin-right:10px" id="btn-invoiceProformaBo-reject">&nbsp;<i class="fa fa-save"></i>&nbsp;&nbsp;Reject&nbsp;&nbsp;</button>
                            </div>

                        </form>
                    </div>
                </div>

            </section><!-- /.Left col -->
        </div><!-- /.row (main row) -->

    </section><!-- /.content -->

</div><!-- /.content-wrapper -->

