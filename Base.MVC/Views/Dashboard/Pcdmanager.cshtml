@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.Localization
@using Base.Core.Entities.Identity
@inject IViewLocalizer Localizer
@*@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet*@

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section stylesPageSpecs {
    <!-- iCheck -->
    <link href="~/adm/plugins/iCheck/minimal/minimal.css" rel="stylesheet" type="text/css" />

    <!-- Date Picker -->
    <link href="~/adm/plugins/bootstrap-datepicker/dist/css/bootstrap-datepicker.css" rel="stylesheet">

    <!-- devex -->
    <link rel="stylesheet" type="text/css" href="~/adm/plugins/devextreme/css/dx.spa.css" />
    <link rel="stylesheet" type="text/css" href="~/adm/plugins/devextreme/css/dx.common.css" />
    <link rel="dx-theme" data-theme="generic.light" href="~/adm/plugins/devextreme/css/dx.light.css" />

    <!-- validationEngine -->
    <link rel="stylesheet" href="~/adm/plugins/validationEngine/validationEngine.jquery.css" type="text/css" />

    <!-- tagCabin css -->
    <link href="~/adm/plugins/zeyn/tag-cabin/tag-cabin.css" rel="stylesheet" type="text/css" />

    <link rel="stylesheet" href="~/adm/dist/css/AdminLTE.css" type="text/css" />
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Breadcrumb-->
    @Html.Partial("~/Views/Shared/AdminBreadCrumbPartial.cshtml")

    <!-- Main content -->
    <section class="content">

        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-6 connectedSortable">
                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-comments-o"></i>
                        <h3 class="box-title">Target</h3>

                        <div class="box-tools pull-right">
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        </div>
                    </div>
                    <div class="box-body" id="loading-image-segmentGrid">
                        <table class="table table-striped" id="pcdmanager-target-table">
                            <thead>
                                <tr>
                                    <th scope="col" rowspan="2">#</th>
                                    <th class="text-center" scope="col" colspan="2">Actual</th>
                                    <th class="text-center" scope="col" colspan="2">YTD</th>
                                </tr>
                                <tr>
                                    <th class="text-center" scope="col">Actual</th>
                                    <th class="text-center" scope="col">Target</th>
                                    <th class="text-center" scope="col">Actual</th>
                                    <th class="text-center" scope="col">Target</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">Order In Take</th>
                                    <td class="text-center" id="or-mon-actual"></td>
                                    <td class="text-center" id="or-mon-target"></td>
                                    <td class="text-center" id="or-yr-actual"></td>
                                    <td class="text-center" id="or-yr-target"></td>
                                </tr>
                                <tr>
                                    <th scope="row">Sales</th>
                                    <td class="text-center" id="sl-mon-actual"></td>
                                    <td class="text-center" id="sl-mon-target"></td>
                                    <td class="text-center" id="sl-yr-actual"></td>
                                    <td class="text-center" id="sl-yr-target"></td>
                                </tr>
                        </table>
                    </div>
                </div>
            </section>
            <section class="col-lg-6 connectedSortable">
                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-comments-o"></i>
                        <h3 class="box-title">Activities</h3>

                        <div class="box-tools pull-right">
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        </div>
                    </div>
                    <div class="box-body" id="loading-image-segmentGrid">
                        <div class="row">
                            <div class="col-md-6">
                                <!-- small box -->
                                <div class="small-box bg-aqua pcdmanager-activites" id="pcdmanager-activites-planned">
                                    <div class="inner">
                                        <h3>0</h3>
                                        <p>Planned Activity</p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-bag"></i>
                                    </div>
                                    <a href="#" class="small-box-footer">@Localizer["More Info"]<i class="fa fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <!-- small box -->
                                <div class="small-box bg-green" id="pcdmanager-activites-completed">
                                    <div class="inner">
                                        <h3>0</h3>
                                        <p>Completed Activity</p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-bag"></i>
                                    </div>
                                    <a href="#" class="small-box-footer">@Localizer["More Info"]<i class="fa fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <div class="row">
            <section class="col-lg-6 connectedSortable">
                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-comments-o"></i>
                        <h3 class="box-title">Daily Activity</h3>

                        <div class="box-tools pull-right">
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        </div>
                    </div>
                    <div class="box-body" id="loading-image-segmentGrid">
                        <div id="gridContainer_dailyactivity"></div>
                    </div>
                </div>
            </section>
            <section class="col-lg-6 connectedSortable">
                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-comments-o"></i>
                        <h3 class="box-title">Announcements</h3>

                        <div class="box-tools pull-right">
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        </div>
                    </div>
                    <div class="box-body" id="loading-image-segmentGrid">
                        <div id="gridContainer_announcements"></div>
                    </div>
                </div>
            </section>
        </div><!-- /.row (main row) -->
        <div class="row">
            <section class="col-lg-6 connectedSortable">
                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-comments-o"></i>
                        <h3 class="box-title">Stock</h3>

                        <div class="box-tools pull-right">
                            <button class="btn bg-teal btn-sm btn-small-miya" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <!--<button class="btn bg-teal btn-sm btn-small-miya" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        </div>
                    </div>
                    <div class="box-body" id="loading-image-segmentGrid">
                        <div id="gridContainer_stock"></div>
                    </div>
                </div>
            </section>
        </div>
    </section><!-- /.content -->

</div><!-- /.content-wrapper -->

